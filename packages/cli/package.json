{
    "name": "saturn-monitor",
    "version": "0.1.0",
    "description": "Saturn - CLI for cron job and scheduled task monitoring",
    "bin": {
        "saturn": "./dist/index.js"
    },
    "main": "./dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "bun run src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target node --minify",
        "prepublishOnly": "bun run build",
        "start": "node dist/index.js",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "echo 'Skipping lint for CLI'"
    },
    "keywords": ["saturn", "monitoring", "cron", "uptime", "alerts", "cli"],
    "repository": {
        "type": "git",
        "url": "https://github.com/saturnmonitor/saturn"
    },
    "homepage": "https://saturnmonitor.com",
    "dependencies": {
        "commander": "^12.1.0",
        "chalk": "^5.3.0",
        "ora": "^8.1.1",
        "conf": "^13.0.1",
        "node-fetch": "^2.7.0"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.7.5",
        "@types/node-fetch": "^2.6.11",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.5"
    }
}